<header>
  <nav>
      <ul>
          <li><a href="/">Home</a></li>
          <% if (user) { %> <!-- Check if user is logged in -->
              <li><a href="/logout">Logout</a></li>
              <% if (user.role === 'admin') { %>
                  <li><a href="/admin">Admin Dashboard</a></li>
              <% } %>
          <% } else { %> <!-- If not logged in -->
              <li><a href="/login">Login</a></li>
              <li><a href="/signup">Sign Up</a></li>
          <% } %>
      </ul>
  </nav>
</header>

